.list-wrapper.data-v-5a18b3c9 {
  position: relative;
  flex: 1;
  min-height: 0;
  display: flex;
  padding-bottom: 0;
  background-color: #fff;
}
.city-section.data-v-5a18b3c9 {
  margin-bottom: 0;
}

  font-size: 28rpx;
  color: #d81e06;
  background-color: #f5f6f8;
  padding: 20rpx 0 20rpx 8rpx;
  letter-spacing: 2rpx;
  font-weight: 700;
  padding-left: 32rpx;
}
.city-item.data-v-5a18b3c9 {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #fff;
  padding: 30rpx 0;
  margin-left: 32rpx;
  border-bottom: 1rpx solid #eef0f4;
  font-size: 30rpx;
}
.city-item .city-tag.data-v-5a18b3c9 {
  font-size: 24rpx;
  color: #1fc35f;

/* 全局通用阴影，保持风格统一 */
.city-page.data-v-5a18b3c9 {
  display: flex;
  flex-direction: column;
  height: 100vh;
  overflow: hidden;
  background-color: #f2f3f5;
  padding-bottom: env(safe-area-inset-bottom);
  box-sizing: border-box;
}
.search-wrapper.data-v-5a18b3c9 {
  padding: 24rpx 32rpx 12rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #eef0f4;
}
.search-bar.data-v-5a18b3c9 {
  display: flex;
  align-items: center;
  background-color: #f0f1f5;
  border-radius: 16rpx;
  padding: 0 24rpx;
  height: 72rpx;
}
.search-bar .search-icon.data-v-5a18b3c9 {
  font-size: 30rpx;
  color: #8f95a3;
  margin-right: 12rpx;
}
.search-bar .search-input.data-v-5a18b3c9 {
  flex: 1;
  font-size: 28rpx;
  color: #1c1f26;
}
.search-bar .clear-icon.data-v-5a18b3c9 {
  padding-left: 12rpx;
  color: #b6bbc6;
  font-size: 32rpx;
}
.location-card.data-v-5a18b3c9 {
  margin: 0;
  padding: 28rpx 32rpx;
  background-color: #fff;
  border-bottom: 12rpx solid #f2f3f5;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.location-card .location-label.data-v-5a18b3c9 {
  font-size: 26rpx;
  color: #707784;
}
.location-card .location-value.data-v-5a18b3c9 {
  font-size: 34rpx;
  font-weight: 600;
  margin-left: 6rpx;
  color: #1c1f26;
}
.location-card .location-tip.data-v-5a18b3c9 {
  display: block;
  margin-top: 8rpx;
  font-size: 22rpx;
  color: #9ca4b3;
}
.location-actions.data-v-5a18b3c9 {
  display: flex;
  gap: 18rpx;
}
.icon-button.data-v-5a18b3c9 {
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  border: 1rpx solid #e1e4ea;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
}
.icon-button__hover.data-v-5a18b3c9 {
  background: #f8f9fb;
}
.icon-button .icon-text.data-v-5a18b3c9 {
  font-size: 30rpx;
  color: #111;
}
.city-scroll.data-v-5a18b3c9 {
  flex: 1;
  min-height: 0;
  height: 100%;
  box-sizing: border-box;
  background-color: #fff;

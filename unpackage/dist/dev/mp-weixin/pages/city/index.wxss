  width: 36rpx;
  height: 36rpx;
  margin: 2rpx 0;
  border-radius: 50%;
  font-size: 24rpx;
  color: #000;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: background-color 0.15s ease, color 0.15s ease;
}
.index-letter.active.data-v-5a18b3c9 {
  color: #fff;
  background-color: #d81e06;
  font-weight: 600;
}